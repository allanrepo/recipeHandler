<?xml version="1.0" encoding="UTF-8"?>

<!-- CurrentSiteConfiguration is set to the StieConfiguration to use. -->
<!-- Multiple SiteConfigurations can exist in a single file. -->
<!-- SiteConfiguration consist of the following settings: -->
<!-- RemoteLocation - that is the path to where the download package can be found. -->
<!-- LocalLocation - That is the path to where to download package will be copied to. -->
<!-- ProgLocation - That is the path to where to untar the package and tester load program. -->
<!-- PackageType - Type of package to be downloded.-->
<!-- tar - expect a tar file at the RemoteLocation to be downloaded -->
<!--       to the LocalLocation and then be un-tar'd. -->

<RECIPEHANDLER_CONF>
    <CurrentSiteConfiguration ConfigurationName="Singapore"/>

    <SiteConfiguration ConfigurationName="Singapore">
        <argParameter RemoteLocation="/tmp/remote"/>
        <argParameter LocalLocation="/tmp/local"/>
        <argParameter ProgLocation="/tmp/prog"/>
       <argParameter PackageType="tar"/>
       <argParameter EVID001="true"/>
       <argParameter EVID002="true"/>
       <argParameter EVID003="true"/>
       <argParameter EVID004="true"/>
       <argParameter EVID005="true"/>
       <argParameter ERIDXXX="true"/>
    </SiteConfiguration>

    <SiteConfiguration ConfigurationName="localuser">
        <argParameter RemoteLocation="/home/localuser/Desktop/ST/remote"/>
        <argParameter LocalLocation="/home/localuser/Desktop/ST/local"/>
        <argParameter ProgLocation="/home/localuser/Desktop/ST/prog"/>
       <argParameter PackageType="tar"/>
        <argParameter S10F1="true"/>
   </SiteConfiguration>


    <SiteConfiguration ConfigurationName="ST-TPY">
        <argParameter RemoteLocation="/export/home/prod/locallib"/>
        <argParameter LocalLocation="/export/home/prod/locallib"/>
        <argParameter ProgLocation="/export/home/prod/locallib"/>
        <argParameter PackageType="tar"/>
         <argParameter S10F1="true"/>
   </SiteConfiguration>

    <SiteConfiguration ConfigurationName="ST-TPY-Debug">
        <argParameter RemoteLocation="/export/home/prod/allan/ST/remote"/>
        <argParameter LocalLocation="/export/home/prod/allan/ST/local"/>
        <argParameter ProgLocation="/export/home/prod/allan/ST/prog"/>
        <argParameter PackageType="tar"/>
        <argParameter S10F1="true"/>
    </SiteConfiguration>


</RECIPEHANDLER_CONF>
